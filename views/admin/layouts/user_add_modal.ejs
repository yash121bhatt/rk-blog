<div class="modal fade" id="addUserModal" tabindex="-1" role="dialog" aria-labelledby="scrollmodalLabel"
	aria-hidden="true">
	<div class="modal-dialog modal-lg" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="scrollmodalLabel">Add User</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<div class="login-form">
					<form action="/admin/user" method="post" enctype="multipart/form-data">
						<div class="form-group">
							<label>Name</label>
							<input class="au-input au-input--full" type="text" name="name" placeholder="Name" required>
						</div>
						<div class="form-group">
							<label>Email Address</label>
							<input class="au-input au-input--full" type="email" name="email" placeholder="Email" required>
						</div>
						<div class="form-group">
							<label>Password</label>
							<input class="au-input au-input--full" type="password" name="password" placeholder="Password" required>
						</div>
						<div class="form-group">
							<label>Role</label>
							<select name="role" id="role" class="form-control" required>
								<option value="admin">Admin</option>
								<option value="user" selected>User (default)</option>
								<option value="author">Author</option>
							</select>
						</div>
						<div class="form-group">
							<label>Status</label>
							<div class="form-check-inline form-check">
								<label for="inline-radio1" class="form-check-label ml-5">
									<input type="radio" id="inline-radio1" name="status" value="inactive" class="form-check-input" checked required>Inactive (default)
								</label>
								<label for="inline-radio2" class="form-check-label ml-5">
									<input type="radio" id="inline-radio2" name="status" value="active" class="form-check-input" required>Active
								</label>
								<label for="inline-radio3" class="form-check-label ml-5">
									<input type="radio" id="inline-radio3" name="status" value="block" class="form-check-input" required>Block
								</label>
							</div>
						</div>
						<div class="form-group">
							<label>Theme</label>
							<select name="theme" id="color-options" class="form-control" required>
								<option class="theme-1" value="theme-1">theme-1 (default)</option>
								<option class="theme-2" value="theme-2">theme-2</option>
								<option class="theme-3" value="theme-3">theme-3</option>
								<option class="theme-4" value="theme-4">theme-4</option>
								<option class="theme-5" value="theme-5">theme-5</option>
								<option class="theme-6" value="theme-6">theme-6</option>
								<option class="theme-7" value="theme-7">theme-7</option>
								<option class="theme-8" value="theme-8">theme-8</option>
							</select>
						</div>
						<div class="form-group">
							<label for="profile_image">Profile Image</label>
							<input class="" type="file" name="profile_image" id="profile_image" required>
						</div>
						<!-- Display the preview image -->
						<img id="preview-image" alt="Image Preview">
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
				<button type="submit" class="btn btn-primary">Add</button>
			</div>
			</form>
		</div>
	</div>
</div>